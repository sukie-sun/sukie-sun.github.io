#container{
    position:relative;
    min-height:100%;
    #mobile-nav{
        display: none;
        .overlay{
            height: 110px;
            position: absolute;
            width: 100%;
            background: #4d4d4d;
            &.fixed{
                position: fixed;
                height: 42px;
                z-index: 99;
            }
        }
        #header{
            padding: 10px 0 0 0;
            .profilepic{
                display: block;
                position: relative;
                z-index: 100;
            }
            .header-menu{
                height: auto;
                margin: 10px;
                ul{
                    text-align: center;
                    cursor: default;
                }
                li{
                    display: inline-block;
                    margin: 3px;
                }
            }
        }
    }
    .left-col {
        background: left-col-color;
        width: left-col-width;
        position:fixed;
        opacity: 0.98;
        transition: width .2s ease-in;
        height:100%;
        overflow: hidden;
        overflow-y: auto;
        background-image: url(left_col_bg);
        background-size: cover;
        background-position: 0% 50%;
        .backImg {
          width: 100%;
          height: 180px;
          background-color: orange;
          position: absolute;
          opacity: 0.5;
          img {
            z-index: -1;
            cursor: none;
            pointer-events: none;
          }
        }
        .intrude-less {
            width: 76%;
            text-align: center;
            margin: 66px auto 0;
            .donateIcon-position {
                position: absolute;
                top: 95%;
                left: 50%;
                margin-left: -28px;
            }
            #donate {
                display: none;
                position: absolute;
                bottom: 60px;
                left: -96px;
                z-index: 9;
                img {
                    border-radius: 5px;
                }
                .triangle {
                    height: 0;
                    width: 0;
                    margin: -5px 0 0 78px;
                    border-right: 45px solid transparent;
                    border-left: 45px solid transparent;
                    border-top: 30px solid #5b91ee;
                }
            }
        }
        li:hover {
            background: none;
            font-weight: bold;
        }
    }
    .hide-left-col {
        z-index: 999;
        cursor: pointer;
        transition:all .2s ease-in;
        position: fixed;
        top: 0;
        left: left-col-width;
        text-align: center;
        line-height: 30px;
        display: block;
        width: 30px;
        height: 30px;
        font-size: 28px;
        background: none;
        .fa {
            color: rgb(255, 255, 255, .5);
        }
        &:hover {
            background: rgba(147, 181, 224, .3) !important;
            .fa {
                color: white;
            }
        }
    }
    .mid-col {
        position:absolute;
        right:0;
        min-height:100%;
        background: mid-col-color;
        left: left-col-width;
        width: auto;
        transition: left .2s ease-in;
    }

    @media only screen and (max-width:768px) {
        .hide-left-col {
            display: none;
        }
        .article-entry li {
            font-size: .75rem;
        }
        @import "_partial/mobile"
    }
    @media only screen and (min-width:769px) and (max-width:1280px) {
        .left-col {
            width: left-col-width - 100px;
        }
        .mid-col {
            left: left-col-width - 100px;
        }
        .hide-left-col {
            left: left-col-width - 100px;
        }
        #post-nav-button {
            left: left-col-width - 100px;
        }
        #tocButton {
            left: 150px;
            top: 300px;
        }
        .toc-article {
            width: 145px
        }
        #header {
            .profilepic {
                width: 88px;
                height: 88px;
                border: 3px solid #e5e5e5;
            }
            .header-author {
                font-size: 20px;
            }
            .header-subtitle {
                font-size: 10px;
            }
            #search-form input {
                width: 58%;
                height: 14px;
            }
            .header-menu {
                line-height: 20px;
            }
            .switch-btn .tips-box .tips-inner li {
                font-size: 10px;
            }
            #switch-area {
                font-size: 10px;
                .switch-part1 {
                    li a {
