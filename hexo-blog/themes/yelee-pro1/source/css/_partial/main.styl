                    }
                }
            }
            .header-nav .social a {
                width: 24px;
                height: 24px;
                line-height: 24px;
                font-size: 16px;
            }
            .donateIcon-position {
                margin-left: -18px;
            }
            .header-nav .social .donateIcon {
                width: 36px;
                height: 36px;
                line-height: 36px;
            }
            #donate {
                left: -72px;
                bottom: 40px;
                img {
                    width: 180px;
                    height: 216px;
                }
                .triangle {
                    margin: -5px 0 0 54px;
                    border-right: 36px solid transparent;
                    border-left: 36px solid transparent;
                    border-top: 24px solid #5b91ee;
                }
            }
        }
    }
}
