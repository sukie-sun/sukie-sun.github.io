.header-author{
    text-align: center;
    margin: 13px 0;
    font-family: font-serif, serif;
    font-size: 30px;
    transition: 0.3s;
}
#header{
    width:100%;
    a {
        color: #696969;
        &:hover {
            color: #B0A0AA;
        }
    }
    .profilepic{
        text-align: center;
        display: block;
        border: 5px solid #e5e5e5;
        border-radius: 50%;
        width: 128px;
        height: 128px;
        margin: 0 auto;
        position: relative;
        overflow: hidden;
        background: #e5e5e5;
        -webkit-box-orient: horizontal;
        -webkit-box-pack: center;
        -webkit-box-align: center;
        text-align: center;
        img{
            width: 100%;
            height: 100%;
            border-radius: 50%;
            animation-duration: .4s;
            animation-delay: .3s;
            -webkit-animation-duration: .4s;
            -webkit-animation-delay: .3s;
        }
        &:hover {
            background: white;
            border: 5px solid #FDE3CF;
            //box-shadow: 0 0 1.5em #FDE3CF;
            animation: profilepic 5s linear infinite;
            -webkit-animation: profilepic 5s linear infinite;
        }
        @keyframes profilepic {
            0% {
                transform: rotate(360deg);
            }
            100% {
                transform: rotate(0deg);
            }
        }
    }
    .header-subtitle{
        text-align: center;
        color:#999;
        font-size: 14px;
        line-height: 1.75;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }
    .header-menu{
        font-weight: 550;
        line-height: 28px;
        font-family: inherit;
        cursor: pointer;
        text-transform: uppercase;
        float: none;
        min-height: @line-height * 3;
        max-height: @line-height * 5;
        overflow: visible;
        text-align: center;
        display: -webkit-box;
        -webkit-box-orient: horizontal;
        -webkit-box-pack: center;
        -webkit-box-align: center;
        li{
            cursor: default;
            a{
                font-size: 14px;
                min-width: left-col-width;
            }
        }
    }
    .switch-area{
        position: relative;
        width: 100%;
        min-height: 320px;
        font-size: 14px;
        .switch-wrap{
            position: relative;
        }
    }
    .turn-left{
        transform: translate(-100%, 0 );
    }
    .header-nav{
        width: 100%;
        position: absolute;
        transition: transform .3s ease-in;
    }
    .switch-part{
        width: 100%;
        position: absolute;
    }
    .switch-part1{
        left: 0;
    }
    .switch-part2{
        display: none;
        left: 0;
        overflow-y: auto;
        max-height: 300px;
        font-size: 12px;
    }
    .switch-part3{
        display: none;
        left: 0;
        line-height: 1.6;
        overflow-y: auto;
        max-height: 260px;
        .switch-friends-link{
            display: inline-block;
            margin-right: 9px;
            border-radius: 3px;
            padding: 5px;
            &:hover{
                background: #88acdb;
                color: #fff;
            }
        }
    }
    .switch-part4{
        display: none;
        left: 0;
        text-align: left;
        line-height: 30px;
    }
}

