.body-wrap
    if hexo-config("limit_article_width.on")
        max-width hexo-config("limit_article_width.max_width")em
        margin auto

    padding-bottom 126px
    overflow hidden

.article {
  margin: 30px;
  margin-bottom: 5px;
  position: relative;
  background: article-color;
  -webkit-transition: all 0.2s ease-in;
  opacity: 1;
  img{
    max-width: 100%;
    margin: .5em auto;
  }
}
.article-index{
  margin-left: 200px;
  padding: 15px 0;
  margin-right: 75px;
  .brief{
    display: block;
    color: #a8a8a8;
    font-size: 0.75rem;
    line-height: 0.75rem;
    height: 7px;
    padding-left: 2px;
    &:before{
      display: inline-block;
      content: "“";
      font-family: serif;
      font-size: 1.875rem;
      float: left;
      margin: 4px 4px 0 -12px;
      color: #c8c8c8;
    }
  }
}

.article-title {
  color: #696969;
  margin-left: 0px;
  font-weight: 400;
  line-height: 1.3;
  margin-bottom: 20px;
  -webkit-transition: color 0.3s;
  -moz-transition: color 0.3s;
  -o-transition: color 0.3s;
  transition: color 0.3s;
  &:hover{
    color: #B0A0AA;
  }
}
.article-inner{
  position: relative;
  margin-bottom: 0px;
  padding-bottom: 15px;
  word-break: break-word;
  //box-shadow: 3px 2px 8px rgba(0,0,0, .07);
}
.article-header{
  border-left: 6px solid #eee;
  padding: 15px 10em 15px 25px;
  &:hover {
    border-left: 5px solid #9c9;
  }
}
.article-info {
  li:hover {
    background: none;
  }
}
.article-info-index.article-info{
  padding-top: 20px;
  margin: 10px 30px 0 30px;
  border-top: 1px solid #ddd;
}
.article-info-post.article-info{
  padding: 0
  border: none;
  margin: -30px 0 20px 30px;
}
.article-entry {
  @require "customise/blockquote"
  line-height: 1.65em;
  padding: 0 31px;
  font-size 1rem;
  a {
    position: relative;
    font-weight: 500;
    text-decoration: none;
    display: inline-block;
  }
  a:hover {
    color: #1abc9c;
  }
  a:before {
    content: "";
    position: absolute;
    width: 0;
    right: 0;
    bottom: 0;
    height: 1px;
    background: #1abc9c;
    -webkit-transition: width .3s ease;
    transition: width .3s ease;
  }
  a:hover:before {
    width: 100%;
    left: 0;
    right: auto;
  }
  p {
    margin: .85em auto;
    line-height: 1.7;
  }
  em {
    font-style: italic;
  }
  video {
    max-width: 100%;
  }
  strong {
    font-weight: 900;
  }
  .caption {
    display: block;
    font-size: 0.8em;
    color: #aaa;
  }
  hr {
    height: 0;
    margin-top: 20px;
    margin-bottom: 20px;
    border-left: 0;
    border-right: 0;
    border-top: 1px solid #DDD;
    border-bottom: 1px solid #FFF;
  }
  .table-area {
    overflow: auto;
  }
  kbd {
    margin: 1px 2px;
    padding: 3px 4px;
    background: #eee;
    color: #555;
    border-radius: 3px;
    box-shadow: 1px 1px 3px rgba(0,0,0,0.25);
  }
  kbd:hover {
    box-shadow: inset -1px -1px 1px rgba(0,0,0,0.25);
  }
  table {
    width:100%;
    max-width: 65em;
    border: 1px solid #aaa;
    margin: 15px auto;
    empty-cells:show;
    tr,td {
      height:35px;
    }
    th {
      font-weight: bold;
      text-align: center;
      background: rgba(158, 188, 226, .2);
      white-space: nowrap;
    }
    tbody {
      tr:hover {
        background: #efefef;
      }
    }
    td,th {
      border: 1px solid #dedede;
      padding: 0 10px;
    }
    tr:nth-child(2n) {
      background: rgba(158, 188, 226, .12);
    }
    td:nth-child(1) {
      white-space: nowrap;
    }
  }
  @import "customise/list"
  @import "customise/heading"
  figure {
    table {
      border: none;
      width: auto;
      margin: 0;
      tbody {
        tr:hover {
          background: none;
        }
      }
    }
  }
  #notFound {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateY(-50%) translateX(-50%);
    width: 80%;
    height: auto;
  }
  #yun {
    height: 500px;
    width: 100%;
    position: relative;
  }
  @media only screen and (max-width: 768px) {
    #yun {
      height: 360px;
    }
    #notFound {
      width: 100%;
    }
  }
  @media only screen and (max-width: 425px) {
    #yun {
      height: 200px;
    }
    #notFound {
      width: 100%;
    }
  }
}

.article-meta
    position absolute
    right 0
    top 18px
    width 10rem
    padding-right 1.2rem
    font-size 0.75rem
    text-align right
    z-index 1
    time
        color #aaa
        float right
    .published
      &:before
            margin-top 0px
            margin-right 5px
            content "\f133"
            font 1em FontAwesome
            color #999
    .updated
      margin-top 3px
      &:before
            margin-top 0px
            margin-right 4px
            content "\f274"
            font 1em FontAwesome
            color #999

.article-more-link {
    float: right;
    margin-top: 5px;
    a {
        padding: 2px 4px;
        -webkit-border-radius: 2px;
        -moz-border-radius: 2px;
        border-radius: 2px;
        background: #88acdb;
        color: #fff;
        font-size: .9rem;
        line-height: 1em;
        white-space: nowrap;
        transition: background 0.3s;
        opacity: i-opacity;
        &:hover {
            background: hover-color;
            opacity: 1;
        }
        &.hidden {
            visibility: hidden;
        }
    }
    &:hover {
        transform: scale(1.06);
    }
}

#article-nav {
    display: table;
    width: 100%;
    height: 2.5em;
    margin: 1em auto;
    font-size .8rem
    background: rgba(158, 188, 226, i-opacity);
    &:hover {
        background: #93b5e0;
    }
}

.article-nav-title {
    display: table-cell;
    vertical-align: middle;
    a {
        color: white;
    }
    a:hover {
        font-style: italic;
    }
}

#article-nav-older {
    padding-right: 1em;
    text-align: right;
    &::after {
        padding-left:0.5em;
        content:"→";
        color: white;
        font-weight: bold;
        font-family: Calibri;
    }
}

#article-nav-newer {
    padding-left: 1em;
    text-align: left;
    &::before {
        padding-right:0.5em;
        content:"←";
        color: white;
        font-weight: bold;
        font-family: Calibri;
    }
}

#intro {
  display: inline;
  font-weight: normal;
  font-size: inherit;
  opacity: 0;
  color: white;
  &::before, &::after {
      content: none;
  }
}

li:hover {
    background: rgba(158, 188, 226, .21);
}
.article-entry > ol:last-child {
    > li:nth-child(2n) {
        background: rgba(158, 188, 226, .12);
    }
    li {
        word-break: break-all;
    }
    li:hover {
        background: #F0F0F0;
    }
}

@import "toc"

.copyright {
    width: 85%;
    max-width: 45em;
    margin: 1.2em auto 0;
    padding: .5em 1.8em;
    border: 1px solid lightgray;
    font-size: .9rem;
    line-height: 1.6em;
    word-break: break-all;
    background: rgba(255, 255, 255, .4);
    span {
        display: inline-block;
        width: 5.8em;
        color: #B5B5B5;
        font-weight: bold;
    }
    a {
        color: gray;
        &:hover {
            color: #a3d2a3;
            text-decoration: underline;
        }
    }
}

aside.comment-bar
    display block
    cursor pointer
    background rgba(white, .3)
    padding .5rem
    //box-shadow 3px 2px 8px rgba(black, .07)
    text-align center
    font-size 2rem
    i.fa-spinner
        display none
    a
        display inline-block
        width 3em
        span
            font-size 1.5rem
    &:active
        background none
